@model Attendance_System.Models.Attendance
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
@using (Html.BeginForm("Index", "Attendance", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-md-2">
            <label>
                User Name
            </label>
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Users.UserName, new { @class = "form-control" })
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-offset-1 col-md-4">
            <input type="submit" name="btnSubmit" value="Confirm Attendace" class="btn btn-success" />
        </div>
    </div>
}
</div>